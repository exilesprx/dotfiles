[alias]
  cb = rev-parse --abbrev-ref HEAD
  pfwl = push --force-with-lease
  rom = rebase -i origin/main
  undo = reset --soft HEAD^
[commit]
	gpgsign = true
[core]
	editor = nvim
  pager = delta
[delta]
  navigate = true
  dark = true
  side-by-side = true
  line-numbers = true
[gpg]
	format = ssh
[init]
	defaultBranch = main
[interactive]
  diffFilter = delta --color-only
[merge]
  tool = "lazygit"
[mergetool "lazygit"]
  cmd = "lazygit"
[rerere]
	enabled = true
